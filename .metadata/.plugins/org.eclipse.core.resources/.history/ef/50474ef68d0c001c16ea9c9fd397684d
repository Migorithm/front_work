			<button >6</button>
			<button >-</button>
			<button >1</button>
			<button >2</button>
			<button >3</button>
			<button >*</button>
			<button >0</button>
			<button >CE</button>
			<button >=</button>
			<button >/</button>
		</div>
		<div id="resultDiv">
			<h2>결 과 이 력</h2>
			<ol id="result"></ol>
		</div>
