<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
	$(function(){
		$('h2').bind('click',function(){ //클릭이벤트를 묶었다.
			//클릭이벤트가 적용되는 h2자기 자신을 참조하기 위해 $(this) 
			/* $(this).html("Hello");  클릭시 hello로 변환*/
			/* $(this).append('★')  */
			
			
			
			
		/* 	html()로 구현! 
		 	#1
			var str  = $(this).html();
			str += '★';
			$(this).html(str); */
			
		/*	#2  */
			$(this).html(function(index,html){
				return html+"★";
			})	
			
			
		})

		});
</script>


<body>
	<h2>jQuery is a fast, small, and feature-rich JavaScript library.</h2>
	<h2>jQuery is a fast, small, and feature-rich JavaScript library.</h2>
	<h2>jQuery is a fast, small, and feature-rich JavaScript library.</h2>
